<header class="text-black p-4 bg-white shadow">
  <div class="container mx-auto flex justify-between items-center">

    {# Logo #}
    <a href="/" class="block">
      <img src="{{ directory }}/images/logo-ub.png" alt="UnlockBelgium logo" class="h-10" />
    </a>

      {# Search and filter section #}
    <form class="flex flex-wrap items-center justify-center gap-3 bg-white border border-gray-200 rounded-full px-6 py-3 shadow">
      <input type="text" name="title" placeholder="In de buurt van" class="flex-grow border-none focus:outline-none focus:ring-0 text-sm w-64" />
      <select name="category" class="rounded-full border border-gray-300 px-3 py-2 text-sm">
        <option value="">CategorieÃ«n</option>
        <option value="1">Natuur</option>
        <option value="2">Museum</option>
        <option value="3">Eten & Drinken</option>
      </select>
      <button type="submit" class="px-4 py-2 border border-[#f1981d] text-[#f1981d] rounded-full hover:bg-[#f1981d] hover:text-white transition">
        Zoek
      </button>
    </form>

    {# Right menu with icons #}
    <nav class="flex gap-4 items-center font-semibold text-sm">
      
