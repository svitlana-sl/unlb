<div class="relative overflow-hidden rounded-xl shadow-lg group hover:scale-[1.02] transition duration-300 bg-white">

  {# Зображення #}
  {% if fields.field_upload_image %}
    <div class="aspect-[3/4] overflow-hidden">
      {{ fields.field_upload_image.content }}
    </div>
  {% endif %}

  {# Назва локації #}
  {% if fields.title_1 %}
    <div class="absolute bottom-4 left-4 right-4">
      <div class="inline-block bg-white text-black text-sm px-3 py-1 rounded-md shadow font-semibold whitespace-normal break-words">
        {{ fields.title_1.content }}
      </div>
    </div>
  {% endif %}

  {# Іконки #}
  <div class="absolute top-2 right-2 flex gap-2">
    {% if fields.field_flag %}
      <div class="bg-white/80 rounded-full p-2 hover:bg-white shadow transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-500" fill="currentColor" viewBox="0 0 24 24">
          <path d="M6 2v20l6-4 6 4V2z"/>
        </svg>
      </div>
    {% endif %}

    {% if fields.field_like %}
      <div class="bg-white/80 rounded-full p-2 hover:bg-white shadow transition">
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="h-5 w-5 text-red-500" viewBox="0 0 24 24">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 
                   2 5.42 4.42 3 7.5 3c1.74 0 3.41 0.81 
                   4.5 2.09C13.09 3.81 14.76 3 16.5 3 
                   19.58 3 22 5.42 22 8.5c0 3.78-3.4 
                   6.86-8.55 11.54L12 21.35z"/>
        </svg>
      </div>
    {% endif %}
  </div>
</div>
